<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextBtn" parent="SmallText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextBtnBlue" parent="TextBtn">
        <item name="android:textColor">#4942E4</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="create_post_fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:foreground">@drawable/ic_nav_create_post</item>
    </style>
</resources>